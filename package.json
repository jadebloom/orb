{
	"name": "orb",
	"version": "0.0.0",
	"scripts": {
		"ng": "ng",
		"start": "ng serve",
		"build": "ng build",
		"watch": "ng build --watch --configuration development",
		"test": "ng test",
		"prepare": "husky",
		"storybook": "ng run orb:storybook",
		"build-storybook": "ng run orb:build-storybook"
	},
	"prettier": {
		"printWidth": 100,
		"singleQuote": true,
		"overrides": [
			{
				"files": "*.html",
				"options": {
					"parser": "angular"
				}
			}
		]
	},
	"lint-staged": {
		"**/*.{ts,js}": [
			"eslint --fix",
			"prettier --write"
		],
		"**/*.{html,css,scss,json,md}": "prettier --write"
	},
	"private": true,
	"packageManager": "npm@11.7.0",
	"dependencies": {
		"@angular/common": "^21.1.0",
		"@angular/compiler": "^21.1.0",
		"@angular/core": "^21.1.0",
		"@angular/forms": "^21.1.0",
		"@angular/platform-browser": "^21.1.0",
		"@angular/router": "^21.1.0",
		"@primeuix/themes": "^2.0.3",
		"crypto-js": "^4.2.0",
		"dexie": "^4.2.1",
		"primeicons": "^7.0.0",
		"primeng": "^21.0.4",
		"rxjs": "~7.8.0",
		"tailwindcss-primeui": "^0.6.1",
		"tslib": "^2.3.0"
	},
	"devDependencies": {
		"@angular-devkit/architect": "^0.2101.0",
		"@angular-devkit/build-angular": "^21.1.0",
		"@angular-devkit/core": "^21.1.0",
		"@angular/build": "^21.1.1",
		"@angular/cli": "^21.1.1",
		"@angular/compiler-cli": "^21.1.0",
		"@angular/platform-browser-dynamic": "^21.1.0",
		"@compodoc/compodoc": "^1.2.1",
		"@eslint/js": "^9.39.2",
		"@storybook/addon-a11y": "^10.2.0",
		"@storybook/addon-docs": "^10.2.0",
		"@storybook/addon-onboarding": "^10.2.0",
		"@storybook/addon-themes": "^10.2.0",
		"@storybook/angular": "^10.2.0",
		"@tailwindcss/postcss": "^4.1.12",
		"eslint": "^9.39.2",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-storybook": "^10.2.0",
		"globals": "^17.1.0",
		"husky": "^9.1.7",
		"jsdom": "^27.1.0",
		"lint-staged": "^16.2.7",
		"postcss": "^8.5.3",
		"prettier": "3.8.1",
		"storybook": "^10.2.0",
		"tailwindcss": "^4.1.12",
		"typescript": "~5.9.2",
		"typescript-eslint": "^8.53.1",
		"vitest": "^4.0.8"
	}
}
